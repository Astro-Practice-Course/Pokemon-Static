---
interface Props {
  name: string;
  id: string;
}

const { name, id } = Astro.props;

const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  class="flex aspect-square flex-col items-center justify-evenly gap-y-4 rounded-2xl bg-slate-700 p-4"
  href={`/pokemons/${name}`}
>
  <img
    class="h-48 w-48 place-content-center items-center justify-center object-contain"
    src={imageUrl}
    alt={name}
  />
  <h3 class="text-lg font-medium">{name}</h3>
</a>
